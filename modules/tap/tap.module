/**
 * Implements hook_tourml_asset_alter()
 */
function tap_tourml_asset_alter(&$tour, &$item) {
    // Handle file fields
    if (isset($item['filemime'])) {

        list($type, $ext) = explode('/', $item['filemime']);
        switch ($type) {
            case 'image':
                _tap_asset_image($item);
                break;
            case 'video':
                _tap_asset_video($item);
                break;
            case 'audio':
                _tap_asset_audio($item);
                break;
        }
    }
}

